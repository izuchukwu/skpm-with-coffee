{
	"name": "nice",
	"version": "0.1.0",
	"engines": {
		"sketch": ">=3.0"
	},
	"skpm": {
		"name": "nice",
		"manifest": "js/manifest.json",
		"main": "plugin.sketchplugin"
	},
	"scripts": {
		"postinstall": "npm run build && skpm-link",
		"coffee": "coffee --output js -cb --no-header source",
		"sketch": "skpm-build",
		"sketch-link": "skpm-link",
		"build": "run-s coffee sketch",
		"watch-coffee": "coffee --output js -cwb --no-header source",
		"watch-sketch": "skpm-build --watch",
		"watch": "run-p --print-label watch-coffee watch-sketch",
		"log": "skpm log -f"
	},
	"devDependencies": {
		"@skpm/builder": "^0.1.3",
		"coffeescript": "^2.0.1",
		"npm-run-all": "^4.1.1"
	}
}
